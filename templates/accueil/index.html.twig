{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}

<div class="container-fluid bg-light p-0" >
    <div class="container-fluid position-relative" style="z-index:1; top:-56px; background-image: url(/symm2pr/templates/images/banner/accueil.png); background-size: cover; height: 775px;" >
        <div class="container h-100" >
            <div class="row h-75"></div>
            <div class="row"><h4>VENEZ DÉCOUVRIR...</h4></div>
            <div class="row"><a href="#" class="btn btn-outline-success">DÉCOUVRIR</a></div>
        </div>
    </div>

    <div class="container bg-trasnparent" >
        <div class="row">
            <div class="col-sm-3">
                <h3>DES PROGRAMMES QUI RÉPONDENT A TOUTES TES ATTENTES DE CROSSFITTER</h3>
            </div>
            <div class="col-sm-9">
                <div class="card-deck">
                    {% for programme in programmes %}
                        <div class="card" style="width: 18rem;">
                            <img src="..." class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{programme.nom}}</h5>
                                <p class="card-text">{{programme.description}}</p>
                                <a href="#" class="btn btn-primary">DÉCOUVRIR</a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>
</div>




{% endblock %}
